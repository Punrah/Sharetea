<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:fitsSystemWindows="true">
    <ImageView android:id="@+id/splashscreen" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_logo"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/open_app"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/signup_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have sharetea account? "/>
        <TextView
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textStyle="bold"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/signup_text"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <LinearLayout
            android:background="@color/black_opac"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/username"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <EditText android:id="@+id/email"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="email" />
        </LinearLayout>



        <!-- Password Label -->
        <LinearLayout
android:background="@color/black_opac"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/key"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="18dp" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <Button
            android:background="@color/black_opac"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18dp"
            android:padding="12dp"
            android:text="LOGIN"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/forgot_password"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot password"/>

    </LinearLayout>

</RelativeLayout>